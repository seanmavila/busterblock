extends layout

mixin message(opp, name)
    if(opp)
        h1.greeting Logged in as 
            span=name 
        h1.greeting Welcome to the admin page
    else 
        h1.greeting Welcome 
            span=name 
            |  to the admin page


append links 
    li(style="float: right;")
        a(href="/logout") Logout 
    li(style="float: right;") 
        a(href="/Movies") Movies

block content
    .dashboard 
        .user 
            +message(opp, name)
            li(style="float: left;")
                input.submit-btn(type='submit' value='Add Movies')
            li(style="float: left;")
                input.submit-btn(type='submit' value='Delete Movies')
            li(style="float: left;")
                input.submit-btn(type='submit' value='Update Users')
            li(style="float: left;")
                input.submit-btn(type='submit' value='Delete Users')